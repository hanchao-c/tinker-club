<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>

	<contextName>tinker-payment</contextName>
	
	<property resource="application.properties" />  
	
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-20(%d{yyyyMMdd-HHmmss-SSS}) %X{requestId} %-5level %C{0}:%L- %msg%n</pattern>
        </encoder>
    </appender>
    
   <appender name="INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logging.info.logger.path}</File>
        <encoder>
            <pattern>%-20(%d{yyyyMMdd-HHmmss-SSS}) %X{requestId} %-5level %C{0}:%L- %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logging.info.logger.path}.%d{yyyyMMdd}</fileNamePattern>
        </rollingPolicy>
    </appender>

	<appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${logging.error.logger.path}</File>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
		<encoder>
			<pattern>%-20(%d{yyyyMMdd-HHmmss-SSS}) %X{requestId} %-5level %C{0}:%L- %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${logging.error.logger.path}.%d{yyyyMMdd}</fileNamePattern>
		</rollingPolicy>
	</appender>
    
    <root level="INFO">
        <appender-ref ref="${logging.appender}" />
        <appender-ref ref="ERROR_FILE" />
    </root>

</configuration>

